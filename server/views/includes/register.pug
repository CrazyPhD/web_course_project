- var message = message;
form(action='/register' method='POST')
    label(for='username') E-Mail:
    input#username(type='text' name='username' autocomplete='off')
    br
    label(for='password') Пароль:
    input#password(type='password' name='password')
    br
    label(for='passConf') Подтверждение пароля:
    input#passConf(type='password' name='passConf')
    br
    if message != null
        p #{message}
    br
    input.submitButton(type='submit' value='Зарегистрироваться')